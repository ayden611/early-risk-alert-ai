# --- App ---
PORT=10000
FLASK_ENV=production
LOG_LEVEL=INFO

# --- DB ---
# Render will provide DATABASE_URL for managed Postgres, or you set it manually.
DATABASE_URL=postgresql://user:pass@host:5432/dbname

# --- Security ---
SECRET_KEY=change-me
JWT_SECRET=change-me-too
MAGIC_CODE_TTL_SECONDS=600

# Allow saving predictions without auth (not recommended for production)
ALLOW_ANONYMOUS_SAVES=false

# Optional API keys (comma-separated): "key1,key2"
API_KEYS=

# Admin bootstrap (optional - you can ignore)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# --- Model ---
MODEL_PATH=demo_model.pkl
